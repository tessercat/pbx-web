<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<document type="freeswitch/xml">
  <section name="configuration">
    <configuration name="verto.conf" description="HTML5 Verto Endpoint">
      <settings>
        <param name="debug" value="10"/>
        <param name="enable-fs-events" value="false"/>
        <param name="enable-presence" value="false"/>
      </settings>
      <profiles>
        <profile name="verto4">

          <param name="bind-local" value="127.0.0.1:{{ verto_port }}"/>
          <param name="secure-combined" value="$${certs_dir}/wss.pem"/>

          <param name="userauth" value="true"/>
          <param name="force-register-domain" value="verto"/>
          <param name="blind-reg" value="false"/>

          <param name="rtp-ip" value="$${local_ip_v4}"/>
          <param name="inbound-codec-string" value="OPUS,PCMU,VP8,H264"/>
          <param name="outbound-codec-string" value="OPUS,PCMU,VP8,H264"/>

          <param name="context" value="verto"/>

        </profile>
        <profile name="verto6">

          <param name="bind-local" value="[::1]:{{ verto_port }}"/>
          <param name="secure-combined" value="$${certs_dir}/wss.pem"/>

          <param name="userauth" value="true"/>
          <param name="force-register-domain" value="verto"/>
          <param name="blind-reg" value="false"/>

          <param name="rtp-ip" value="$${local_ip_v6}"/>
          <param name="inbound-codec-string" value="OPUS,PCMU,VP8,VP9,H264"/>
          <param name="outbound-codec-string" value="OPUS,PCMU,VP8,VP9,H264"/>

          <param name="context" value="verto"/>

        </profile>
      </profiles>
    </configuration>
  </section>
</document>
