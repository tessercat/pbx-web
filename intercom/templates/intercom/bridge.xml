{% load bridge_extras %}
<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<document type="freeswitch/xml">
  <section name="dialplan">
    <context name="{{ line.intercom.domain }}">
      <extension name="bridge">
        <condition regex="all">
          <regex field="destination_number" expression="^{{ extension.extension_number }}$"/>
          <action application="export" data="rtp_secure_media=true"/>
          <!--action application="info"/-->
          <action application="bridge" data="{% get_dialstring line action %}"/>
        </condition>
      </extension>
    </context>
  </section>
</document>
