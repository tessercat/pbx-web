<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<document type="freeswitch/xml">
  <section name="dialplan">
    <context name="{{ context }}">
      <extension name="call">
        <condition regex="all">
          <regex field="destination_number" expression="^{{ action.number }}$"/>
          <action application="bridge" data="${sofia_contact({{ action.line.username }}@{{ action.hostname }}}"/>
        </condition>
      </extension>
    </context>
  </section>
</document>
